        "from collections import Counter\n",
        "\n",
        "query = \"learning ai\"\n",
        "docs = [\n",
        "    \"machine learning is fun\",\n",
        "    \"deep learning and ai\",\n",
        "    \"java programming basics\"\n",
        "]\n",
        "\n",
        "def manhattan_search(query, docs):\n",
        "    qv = Counter(query.split())\n",
        "    result = []\n",
        "    for d in docs:\n",
        "        dv = Counter(d.split())\n",
        "        keys = set(qv) | set(dv)\n",
        "        result.append(sum(abs(qv[k] - dv[k]) for k in keys))\n",
        "    return result\n",
        "\n",
        "print(manhattan_search(query, docs))\n"
      ],
