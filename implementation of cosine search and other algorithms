    {
      "cell_type": "code",
      "source": [
        "query = \"learning ai\"\n",
        "docs = [\n",
        "    \"machine learning is fun\",\n",
        "    \"deep learning and ai\",\n",
        "    \"java programming basics\"\n",
        "]\n",
        "\n",
        "def jaccard_search(query, docs):\n",
        "    q = set(query.split())\n",
        "    return [\n",
        "        round(len(q & set(d.split())) / len(q | set(d.split())), 3)\n",
        "        for d in docs\n",
        "    ]\n",
        "\n",
        "print(jaccard_search(query, docs))\n"
      ],
