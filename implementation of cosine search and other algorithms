      "cell_type": "code",
      "source": [
        "from collections import Counter\n",
        "import math\n",
        "\n",
        "query = \"learning ai\"\n",
        "docs = [\n",
        "    \"machine learning is fun\",\n",
        "    \"deep learning and ai\",\n",
        "    \"java programming basics\"\n",
        "]\n",
        "\n",
        "def euclidean_search(query, docs):\n",
        "    qv = Counter(query.split())\n",
        "    result = []\n",
        "    for d in docs:\n",
        "        dv = Counter(d.split())\n",
        "        keys = set(qv) | set(dv)\n",
        "        result.append(round(math.sqrt(sum((qv[k]-dv[k])**2 for k in keys)), 3))\n",
        "    return result\n",
        "\n",
        "print(euclidean_search(query, docs))\n"
      ],
