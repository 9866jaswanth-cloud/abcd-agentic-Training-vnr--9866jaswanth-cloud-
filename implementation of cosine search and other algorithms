      "source": [
        "def cos_sim(a,b):\n",
        "    import math\n",
        "    dot = sum(x*y for x,y in zip(a,b))\n",
        "    na  = math.sqrt(sum(x*x for x in a))\n",
        "    nb  = math.sqrt(sum(y*y for y in b))\n",
        "    return dot/(na*nb)"
      ],
