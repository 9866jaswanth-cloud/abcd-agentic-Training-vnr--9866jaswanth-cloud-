      "source": [
        "import re\n",
        "\n",
        "def tokenizer(text):\n",
        "    # convert to lowercase\n",
        "    text = text.lower()\n",
        "\n",
        "    # remove punctuation\n",
        "    text = re.sub(r'[^a-z0-9\\s]', '', text)\n",
        "\n",
        "    # split into tokens\n",
        "    tokens = text.split()\n",
        "\n",
        "    return tokens\n",
        "\n",
        "# Example\n",
        "sentence = \"Hello, world! NLP is fun.\"\n",
        "print(tokenizer(sentence))\n"
      ]
    }
  ]
