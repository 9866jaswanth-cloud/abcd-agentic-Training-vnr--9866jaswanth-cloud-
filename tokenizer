        "import re\n",
        "\n",
        "def tokenizer(text):\n",
        "    tokens = re.findall(r'\\b\\w+\\b', text.lower())\n",
        "    return tokens\n",
        "\n",
        "print(tokenizer(\"AI costs $100 in 2025!\"))\n"
