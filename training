            <div class="text-output" id="textOutput">Your converted text will appear here...</div>

            <div class="action-buttons">
                <button class="btn btn-primary" id="copyBtn">üìã Copy Text</button>
                <button class="btn btn-secondary" id="downloadBtn">üíæ Download</button>
                <button class="btn btn-success" id="shareBtn" style="display: none;">üì§ Share</button>
                <button class="btn btn-secondary" id="clearBtn">üóëÔ∏è Clear</button>
            </div>

            <div id="messageArea"></div>
        </div>

        <div class="footer">
            <p>Works on Windows, iOS, Android, and all modern browsers ‚Ä¢ No installation required</p>
            <p>Built with Web Speech API ‚Ä¢ Privacy-focused (processing happens locally when possible)</p>
        </div>
    </div>

    <script>
        class VoiceToTextConverter {
            constructor() {
                this.recognition = null;
                this.isRecording = false;
                this.finalTranscript = '';
                this.interimTranscript = '';
                
                this.initializeElements();
                this.checkBrowserSupport();
                this.setupEventListeners();
                this.initializeSpeechRecognition();
            }

            initializeElements() {
                this.recordBtn = document.getElementById('recordBtn');
                this.status = document.getElementById('status');
                this.textOutput = document.getElementById('textOutput');
                this.copyBtn = document.getElementById('copyBtn');
                this.downloadBtn = document.getElementById('downloadBtn');
                this.shareBtn = document.getElementById('shareBtn');
                this.clearBtn = document.getElementById('clearBtn');
                this.languageSelect = document.getElementById('languageSelect');
                this.messageArea = document.getElementById('messageArea');
                this.compatibilityInfo = document.getElementById('compatibilityInfo');
            }

            checkBrowserSupport() {
                if (!('webkitSpeechRecognition' in window) && !('SpeechRecognition' in window)) {
                    this.showError('Speech recognition is not supported in this browser. Please use Chrome, Edge, or Safari on iOS 14.5+');
                    this.recordBtn.disabled = true;
                    return false;
                }

                // Show share button on mobile devices
                if (navigator.share) {
                    this.shareBtn.style.display = 'inline-block';
                }

                return true;
            }

            initializeSpeechRecognition() {
                if (!this.checkBrowserSupport()) return;

                const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
                this.recognition = new SpeechRecognition();

                this.recognition.continuous = true;
                this.recognition.interimResults = true;
                this.recognition.lang = this.languageSelect.value;

                this.recognition.onstart = () => {
                    this.isRecording = true;
                    this.updateRecordButton();
                    this.updateStatus('Listening... Speak now', 'listening');
                };

                this.recognition.onresult = (event) => {
                    let interimTranscript = '';
                    let finalTranscript = this.finalTranscript;

                    for (let i = event.resultIndex; i < event.results.length; i++) {
                        const transcript = event.results[i][0].transcript;
                        if (event.results[i].isFinal) {
                            finalTranscript += transcript + ' ';
                        } else {
                            interimTranscript += transcript;
                        }
                    }

                    this.finalTranscript = finalTranscript;
                    this.interimTranscript = interimTranscript;
                    this.updateTextOutput();
                };

                this.recognition.onerror = (event) => {
                    console.error('Speech recognition error:', event.error);
                    this.handleSpeechError(event.error);
                };

                this.recognition.onend = () => {
                    this.isRecording = false;
                    this.updateRecordButton();
                    if (this.finalTranscript.trim()) {
                        this.updateStatus('Recording complete', 'processing');
                        this.addTimestamp();
                    } else {
                        this.updateStatus('No speech detected. Click to try again');
                    }
                };
            }

            setupEventListeners() {
                this.recordBtn.addEventListener('click', () => this.toggleRecording());
                this.copyBtn.addEventListener('click', () => this.copyText());
                this.downloadBtn.addEventListener('click', () => this.downloadText());
                this.shareBtn.addEventListener('click', () => this.shareText());
                this.clearBtn.addEventListener('click', () => this.clearText());
                this.languageSelect.addEventListener('change', () => this.changeLanguage());
            }

            toggleRecording() {
                if (!this.recognition) {
                    this.showError('Speech recognition not available');
                    return;
                }

                if (this.isRecording) {
                    this.recognition.stop();
                } else {
                    this.recognition.start();
                }
            }

            updateRecordButton() {
                if (this.isRecording) {
                    this.recordBtn.innerHTML = '‚èπÔ∏è<br>Stop Recording';
                    this.recordBtn.classList.add('recording');
                } else {
                    this.recordBtn.innerHTML = 'üé§<br>Start Recording';
                    this.recordBtn.classList.remove('recording');
                }
            }

            updateStatus(message, className = '') {
                this.status.textContent = message;
                this.status.className = 'status ' + className;
            }

            updateTextOutput() {
                const displayText = this.finalTranscript + this.interimTranscript;
                if (displayText.trim()) {
                    this.textOutput.textContent = displayText;
                    this.textOutput.classList.add('has-content');
                } else {
                    this.textOutput.textContent = 'Your converted text will appear here...';
                    this.textOutput.classList.remove('has-content');
                }
            }

            addTimestamp() {
                if (this.finalTranscript.trim()) {
                    const timestamp = new Date().toLocaleString();
                    this.finalTranscript += `\n\n[${timestamp}]\n`;
                    this.updateTextOutput();
                }
            }

            changeLanguage() {
                if (this.recognition) {
                    this.recognition.lang = this.languageSelect.value;
                }
            }

            async copyText() {
                const text = this.finalTranscript.trim();
                if (!text) {
                    this.showError('No text to copy');
                    return;
                }

                try {
                    await navigator.clipboard.writeText(text);
                    this.showSuccess('Text copied to clipboard!');
                } catch (err) {
                    // Fallback for older browsers
                    this.fallbackCopyText(text);
                }
            }

            fallbackCopyText(text) {
                const textArea = document.createElement('textarea');
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.select();
                try {
                    document.execCommand('copy');
                    this.showSuccess('Text copied to clipboard!');
                } catch (err) {
                    this.showError('Could not copy text');
                }
                document.body.removeChild(textArea);
            }

            downloadText() {
                const text = this.finalTranscript.trim();
                if (!text) {
                    this.showError('No text to download');
                    return;
                }

                const blob = new Blob([text], { type: 'text/plain' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `voice-to-text-${new Date().toISOString().slice(0, 10)}.txt`;
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                URL.revokeObjectURL(url);
                
                this.showSuccess('Text file downloaded!');
            }

            async shareText() {
                const text = this.finalTranscript.trim();
                if (!text) {
                    this.showError('No text to share');
                    return;
                }

                if (navigator.share) {
                    try {
                        await navigator.share({
                            title: 'Voice-to-Text Conversion',
                            text: text
                        });
                        this.showSuccess('Text shared successfully!');
                    } catch (err) {
                        if (err.name !== 'AbortError') {
                            this.showError('Could not share text');
                        }
                    }
                } else {
                    this.showError('Sharing not supported on this device');
                }
            }

            clearText() {
                this.finalTranscript = '';
                this.interimTranscript = '';
                this.updateTextOutput();
                this.updateStatus('Text cleared. Click microphone to start recording');
                this.clearMessages();
            }

            handleSpeechError(error) {
                let message = 'Speech recognition error: ';
                switch (error) {
                    case 'no-speech':
                        message = 'No speech detected. Please try again.';
                        break;
                    case 'audio-capture':
                        message = 'Microphone not accessible. Please check permissions.';
                        break;
                    case 'not-allowed':
                        message = 'Microphone permission denied. Please allow microphone access.';
                        break;
                    case 'network':
                        message = 'Network error. Please check your internet connection.';
                        break;
                    default:
                        message += error;
                }
                this.showError(message);
                this.updateStatus('Error occurred. Click to try again');
            }

            showError(message) {
                this.clearMessages();
                const errorDiv = document.createElement('div');
                errorDiv.className = 'error-message';
                errorDiv.textContent = message;
                this.messageArea.appendChild(errorDiv);
                setTimeout(() => this.clearMessages(), 5000);
            }

            showSuccess(message) {
                this.clearMessages();
                const successDiv = document.createElement('div');
                successDiv.className = 'success-message';
                successDiv.textContent = message;
                this.messageArea.appendChild(successDiv);
                setTimeout(() => this.clearMessages(), 3000);
            }

            clearMessages() {
                this.messageArea.innerHTML = '';
            }
        }

        // Initialize the app when the page loads
        document.addEventListener('DOMContentLoaded', () => {
            new VoiceToTextConverter();
        });

        // Add PWA support
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                // Service worker registration would go here for offline support
            });
        }
    </script>
</body>
</html>